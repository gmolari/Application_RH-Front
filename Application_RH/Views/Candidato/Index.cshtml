@model List<CandidatoModel>

@{
    ViewData["Title"] = "Candidatos";
}

<div class="text-center">
    <h3 class="display-4">Listagem de Candidatos</h3>

    <table class="table table-striped">
        <thead>
            <tr>
                <th scope="col">#</th>
                <th scope="col">Nome</th>
                <th scope="col">Contato</th>
                <th scope="col">Vaga</th>
                <th scope="col">Tecnologias</th>
                <th scope="col"></th>
            </tr>
        </thead>
        <tbody>
            @if (Model != null && Model.Any())
            {
                @foreach (CandidatoModel item in Model)
                {
                    <tr>
                        <th scope="row"> @item.Id </th>
                        <td> @item.Nome </td>
                        <td> @item.Contato </td>
                        <td> @item.NomeVaga </td>
                        <td> @item.Tecnologias </td>
                        <td>
                            <div class="btn-group" role="group">
                                <a role="button" class="btn btn-primary" asp-route-id="@item.Id" asp-controller="Candidato" asp-action="Editar">Editar</a>
                                <a role="button" class="btn btn-secondary" asp-route-id="@item.Id" asp-controller="Candidato" asp-action="Visualizar">Visualizar</a>
                                <a role="button" class="btn btn-danger" asp-route-id="@item.Id"  asp-controller="Candidato" asp-action="ApagarConfirmacao">Apagar</a>
                            </div>
                        </td>
                    </tr>
                }
            }
        </tbody>
    </table>
    <div class="d-flex justify-content-center">
        <a role="button" class="btn btn-primary" asp-controller="Candidato" asp-action="Criar"> Novo candidato </a>
    </div>
</div>
