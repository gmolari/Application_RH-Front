@model List<TecnologiaModel>

@{
    ViewData["Title"] = "Candidatos";
}

<div class="text-center">

    <br />

    <h3 class="display-4">Listagem de Tecnologias</h3>

    <table class="table table-striped mx-auto w-50">
        <thead>
            <tr>
                <th scope="col">#</th>
                <th scope="col">Tecnologia</th>
                <th scope="col"></th>
            </tr>
        </thead>
        <tbody>
            @if (Model != null && Model.Any())
            {
                @foreach (TecnologiaModel item in Model)
                {
                    <tr>
                        <th scope="row"> @item.Id </th>
                        <td> @item.Nome </td>
                        <td>
                            <div class="btn-group" role="group">
                                <a role="button" class="btn btn-primary" asp-route-id="@item.Id" asp-controller="Tecnologia" asp-action="Editar">Editar</a>
                                <a role="button" class="btn btn-danger" asp-route-id="@item.Id" asp-controller="Tecnologia" asp-action="ApagarConfirmacao">Apagar</a>
                            </div>
                        </td>
                    </tr>
                }
            }
        </tbody>
    </table>
    <div class="d-flex justify-content-center">
        <a role="button" class="btn btn-primary" asp-controller="Tecnologia" asp-action="Criar"> CADASTRAR TECNOLOGIA </a>
    </div>
</div>
