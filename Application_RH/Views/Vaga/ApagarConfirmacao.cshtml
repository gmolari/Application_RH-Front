@model VagaModel

@{
    ViewData["Title"] = "Confirmacao deletar vaga";
}

<div class="text-center">

    <h3 class="display-4">Deseja realmente apagar a tecnologia:</h3>
    <h3 class="display-4">"@Model.Nome"?</h3>

</div>
<div class="d-flex justify-content-around w-50 mx-auto">
    <a role="button" class="btn btn-primary" asp-controller="Vaga" asp-action="Index"> Cancelar</a>
    <a role="button" class="btn btn-danger" asp-controller="Vaga" asp-route-id="@Model.Id" asp-action="Apagar"> Confirmar exclusão </a>
</div>
