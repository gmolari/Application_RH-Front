@model VagaModel

@{
    ViewData["Title"] = "Editar vaga";
}

<div class="text-center">

    <h3 class="display-4">Editar Vaga "@Model.Nome"?</h3>

</div>

<form id="form" asp-controller="Vaga" class="mx-auto w-75" asp-action="Editar" method="post">
    <input type="text" asp-for="Id" hidden />
    <div class="form-group">
        <label for="name">Nome</label>
        <input type="text" asp-for="Nome" class="form-control" id="name" value="" placeholder="@Model.Nome">
    </div>
    <div class="d-flex justify-content-around p-3">
        <button type="submit" class="btn btn-primary w-25">Editar</button>
        <a role="button" class="btn btn-secondary w-25" asp-controller="Vaga" asp-action="Index">Voltar</a>
    </div>
</form>
